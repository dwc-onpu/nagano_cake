<div class="container">
<div class="row">
<div class="col-xs-5">

  <p class="text-info m-4"><%= notice %></p>


<h1 class="pb-4">注文情報入力</h1>

<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true  do |f| %>

  <div class="pb-3">
    <h2>支払方法</h2>
      <div class="ml-5">
        <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
        <%= f.label "クレジットカード" %><br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label "銀行振込" %>
      </div>
  </div>


  <div class="pb-5">
    <h2>お届け先</h2>
      <div class="ml-5">
        <%= radio_button_tag "address", "customer_address", checked: true %>
        <%= f.label "ご自身の住所" %><br>
        <%= radio_button_tag "address", "customer.addresses" %>
        <%= f.label "登録済住所から選択" %>
        <%= f.collection_select :select_address, current_customer.addresses, :id, :select_address %><br>
        <%= radio_button_tag "address", "add_address"  %>
        <%= f.label "新しいお届け先" %><br>
          <%= f.label "郵便番号" %>
          <%= f.text_field :postal_code %><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %><br>
          <%= f.label "宛名" %>
          <%= f.text_field :name %><br>
      </div>
  </div>

  <%= f.submit "確認画面へ進む" %>
<% end %>

</div>
</div>
</div>