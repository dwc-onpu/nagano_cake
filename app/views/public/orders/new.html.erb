<%= notice %>

<h1>注文情報入力</h1>

<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true  do |f| %>
  <h2>支払方法</h2>
    <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
    <%= f.label "クレジットカード" %><br>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label "銀行振込" %>

  <h2>お届け先</h2>
    <%= radio_button_tag "address", "customer_address", checked: true %>
    <%= f.label "ご自身の住所" %>
    <%= radio_button_tag "address", "customer.addresses" %>
    <%= f.label "登録済住所から選択" %>
    <%= f.collection_select :select_address, current_customer.addresses, :id, :select_address %>
    <%= radio_button_tag "address", "add_address"  %>
    <%= f.label "新しいお届け先" %>
      <%= f.label "郵便番号" %>
      <%= f.text_field :postal_code %>
      <%= f.label "住所" %>
      <%= f.text_field :address %>
      <%= f.label "宛名" %>
      <%= f.text_field :name %>

  <%= f.submit "確認画面へ進む" %>
<% end %>