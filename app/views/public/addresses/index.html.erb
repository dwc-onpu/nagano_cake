
<h3>配送先登録／一覧</h3>


<!-- form_with部分 -->
<%= form_with model: @address, local:true do |f| %>
  <div>
  <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
  <%= f.text_field :postal_code %>
  </div>
  <div>
  <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
  <%= f.text_field :address %>
  </div>
  <div>
  <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
  <%= f.text_field :name %>
  </div>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
     <th>郵便番号</th>
     <th>住所</th>
     <th>宛名</th>
  </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
  <tr>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "編集する", edit_address_path(address) %>
      <%= link_to "消去する", address_path(address), method: :DELETE %>
  </td>
<% end %>
  </tr>
</tbody>
</table>