<div class="container">


<h1 class="my-3 offset-1 mb-4">注文履歴詳細</h1>


<h4>注文情報　　　　　　　　　　　　　　　　　　　　　　請求情報</h4>
<div class="row">
<table class="table col-6 table-bordered">
  <thead class="thead-light">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %><br> <%= @order.address %><br> <%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status %></td>
    </tr>
  </thead>
</table>
<!--</div>-->


<!--<div>-->
<!--<h4>請求情報</h4>-->
<table class="table col-4 table-bordered ml-5">
  <thead class="thead-light">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment -= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_payment += @order.shipping_cost %></td>
    </tr>
  </thead>
</table>
</div>



<h4 class="mt-3">注文内容</h4>
<table class="table col-8 table-bordered">
    <thead thead class="thead-light">
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </thead>

  <% @order.order_details.each do |order_detail| %>
    <tbody>
      <td><%= order_detail.item.name %></td>
      <td><%= (order_detail.item.price * 1.1).floor  %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price %></td>
    </tbody>
  <% end %>
</table>


</div>