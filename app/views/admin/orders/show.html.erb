<%= notice %>
<h2>注文履歴詳細</h2>

<table class="table col-6 mb-5">
    <tr>
      <th>購入者</th>
      <td><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
      <td><td>
    </tr>

    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
      <td><td>
    </tr>

    <tr>
      <th>配送先</th>
      <td>〒 <%= @order.customer.postal_code %> <%= @order.customer.address %></td>
      <td><td>
    </tr>

    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
      <td><td>
    </tr>

    <tr>
      <th>注文ステータス</th>
      <td colspan="2">
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true, class: "d-flex justify-content-between" do |f| %>
        <%= f.select :status, Order.statuses.keys.to_a %>
        <%= f.submit "更新" %>
      <% end %>
      </td>
    </tr>
</table>


<table class="table">
  <thead class="thead-light">
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </thead>


<% @order.order_details.each do |order_detail| %>
  <tbody>
    <td><%= order_detail.item.name %></td>
    <td><%= (order_detail.item.price.to_i * 1.1).floor %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.price * order_detail.amount %></td>
    <td>
      <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail.id), method: :patch, local: true  do |f| %>
        <%= f.select :making_status, OrderDetail.making_statuses.keys.to_a %>
        <%= f.submit "更新" %>
      <% end %>
    </td>
  </tbody>
<% end %>

</table>


<table class="table col-8">
  <tr>
    <th>商品合計</th> <td><%= @order.total_payment -= @order.shipping_cost %>円</td>
  </tr>

  <tr>
    <th>送料</th> <td><%= @order.shipping_cost %>円</td>
  </tr>

  <tr>
    <th>請求金額合計</th> <td><%= @order.total_payment += @order.shipping_cost %>円</td>
  </tr>
</table>