<div class="row">
<div class="col-md-12">

<div class="badge badge-light my-4">
<h3>配送先登録／一覧</h3>
</div>

<!-- form_with部分 -->
<%= form_with model: @address, local:true do |f| %>
<div class="shipping_addres col-md-10">
<div class="form-group col-md-12">
  <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3 control-label" %>
  <%= f.text_field :postal_code, class: "form-control col-3"%>
  </div>

  <div>
  <%= f.label :"住所" ,class: "col-md-3 control-label" %>
  <%= f.text_field :address, class: "form-control col-5" %>
  </div>
  <div>
  <%= f.label :"宛名" ,class: "col-md-3 control-label" %>
  <%= f.text_field :name, class: "form-control col-3" %>
  </div>
  </div>

  <div class="text-center mt-2">
  <%= f.submit '新規登録', class:"btn btn-success" %>
  </div>
<% end %>

</div>
</div>

<div class="row">
<div class="col-md-8">
<table class="table table-hover table-bordered mt-3">

  <thead>
    <tr>
     <th style="width: 10%">郵便番号</th>
     <th style="width: 30%">住所</th>
     <th style="width: 10%">宛名</th>
     <th style="width: 20%"></th>
  </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
  <tr>
  <td class="col-xs-2"><%= address.postal_code %></td>
  <td class="col-xs-6"><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
      <%= link_to "消去する", address_path(address), method: :DELETE, class:"btn btn-danger" %>
  </td>
<% end %>
  </tr>
</tbody>
</table>

</div>
</div>
</div>