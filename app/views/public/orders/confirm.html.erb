<h1>注文情報確認</h1>

<table>
    <thead>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </thead>

  <% total_price = 0 %>
  <% @cart_items.each do |cart_item| %>
    <tbody>
      <td><%#= attachment_image_tag %> <%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price.to_i * 1.1).floor %></td>
      <td><%= cart_item.amount %></td>
      <td><%= (cart_item.item.price.to_i * 1.1).floor * cart_item.amount %></td>
      <% total_price += (cart_item.item.price.to_i * 1.1).floor * cart_item.amount %>
    </tbody>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>

  <tr>
    <th>商品合計</th>
    <td><%= total_price %></td>
  </tr>

  <tr>
    <th>請求金額</th>
    <td><%= total_price += @order.shipping_cost %></td>
  </tr>
</table>


<h2>支払い方法</h2>
  <%= @order.payment_method %>

<h2>お届け先</h2>
  〒<%= @order.postal_code  %><%= @order.address %><%= @order.name %>


<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :total_payment, value: total_price %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :shipping_cost %>
  <%= f.submit "注文を確定する" %>
<% end %>