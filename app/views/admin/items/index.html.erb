<h1>商品一覧</h1>

<% @items.each do |item| %>
   <table>
    <thead>
     <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <th><%= item.id %></th>
      <th><%= link_to admin_item_path(item) do %>
           <%= item.name %>
          <% end %>
      </th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      <th><%= item.is_active %></th>
     </tr>
    </tbody>
<% end %>