
<div>
<p>ショッピングカート</p>
<%= link_to "カートを空にする",  cart_items_destroy_all_path, method: :DERETE, class: "btn btn-outline-danger mt-5" %>
</div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込み）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <%# 商品名/画像はまだ %>
      <td><%= cart_item.item.name %></td>

       <%# 単価（税込み） %>
      <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %> </td>


      <%# 数量 %>
      <td><%= form_with(model: cart_item, local: true, url: cart_item_path(cart_item) ) do |f| %>
          <%= f.label :amount, '' %>
          <%= f.select :amount, {'1': 1, '2': 2, '3': 3}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          <% end %>
      </td>

      <%# 小計 %>
      <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %> </td>


      <%# 消去 %>
      <td><%= link_to "消去する", cart_item_path(cart_item), method: :DERETE %></td>

    <% end %>
    </tr>
  </tbody>
</table>

<div>
  <%# 買い物を続ける %>
  <%= link_to "買い物を続ける", items_path, class: "btn btn-outline-danger mt-5" %>
</div>

