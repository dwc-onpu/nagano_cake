<div class="container">
  <div class="row my-4">
    <h1>商品一覧</h1><h4 class="pt-3">（全<%= Item.ids.count %>件）</h2>
  </div>  
  <div class="row">
       <% @items.each do |item| %>
   <div class="col-3 mt-3">
       <%= link_to item_path(item) do %>
       <%= attachment_image_tag item, :image, :fill,200,150,format: 'jpeg'%><br>
       <% end %>
      <%= item.name %><br>
       <%= item.price %><br>
    </div>
       <% end %>
   </div> 
   <div class="row justify-content-center mt-4">
    <%= paginate @items%>
   </div>
 </div>
