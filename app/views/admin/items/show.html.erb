<div class="container" >
    <div class="row my-4">    
        <h1>商品詳細</h1>
    </div>
    <div class="row">
        <div class="col-5">
        <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
        </div>
        <div class="col-7">
            <p class="mb-2">商品名:　　<%= @item.name %></p>
            <p class="my-4">商品説明:　<%= @item.introduction %></p>
            <p class="mb-2">ジャンル:　<%= @item.genre.name %></p>
                         <p>税込価格:　<%= (1.1*@item.price).floor %>(<%= @item.price %>)円</p>
            <span class="d-flex">
            <p class="d-flex">販売ステータス:</p>
            <% if @item.is_active == true %>
            <p class="text-success">　販売中</p>
            <% elsif @item.is_active == false %>
            <p class="text-danger">　販売停止中</p>
            <%  end  %>
            </span>
            <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success"%>
        </div>
    </div>
</div>