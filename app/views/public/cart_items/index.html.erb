
<div>
<p>ショッピングカート</p>
<%= link_to "カートを空にする",  cart_items_destroy_all_path, method: :DERETE %>
</div>

<table>
  <thead>
    <tr>
      <th class="col-xs-3">商品名</th>
      <th class="col-xs-2">単価（税込み）</th>
      <th class="col-xs-1">数量</th>
      <th class="col-xs-1">小計</th>
      <th class="col-xs-1"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_itmes.each do |cart_item| %>
    <tr>
      <td class="col-xs-3"><%= cart_item.item.name %></td>
      
      <td><%= c.number_field :quantity, min:1, max:10000, step:1 %></td>
      
      
      <td class="col-xs-1"><%= (cart_item.item.price * 1.1).floor * cart_item.amount %> </td>
      <td class="col-xs-1"><%= link_to "消去する", cart_item_path(cart_item), method: :DERETE %></td>
     
    <% end %>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to "情報入力画面に進む", new_order_path, "col-xs-12 btn btn-success"%>
</div>