<div class="container">
<div class="row">
<div class="col-xs-5">

  <p class="text-info m-4"><%= notice %></p>


<h1 class="my-3 offset-1 mb-4">注文情報入力</h1>

<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true  do |f| %>

  <div class="pb-3">
    <h4>支払方法</h4>
      <div class="ml-5">
        <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
        <%= f.label "クレジットカード" %><br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label "銀行振込" %>
      </div>
  </div>


  <div class="pb-2">

    <h4>お届け先</h4>
      <div class="ml-5">
        <%= radio_button_tag "address", "customer_address", checked: true %>

        <%= f.label "ご自身の住所" %><br>
          <p class="ml-4">〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
          <%= current_customer.last_name %> <%= current_customer.first_name %></p>
        <%= radio_button_tag "address", "customer.addresses" %>

        <%= f.label "登録済住所から選択" %><br>
          <p class="ml-4"><%= f.collection_select :select_address, current_customer.addresses, :id, :select_address %></p>
        <%= radio_button_tag "address", "add_address"  %>

        <%= f.label "新しいお届け先" %><br>
        <div class="ml-4 row">
          <div>
            <p class="mb-0"><%= f.label "郵便番号(ハイフンなし）" %></p>
        　　<p class="mb-0"><%= f.label "住所" %></p>
        　　<p class="mb-0"><%= f.label "宛名" %></p>
          </div>
          <div class="ml-4">
            <p class="mb-4"><%= f.text_field :postal_code %></p>
            <p class="mb-4"><%= f.text_field :address %></p>
            <p class="mb-4"><%= f.text_field :name %></p>
          </div>
        </div>

      </div>
  </div>

 <%= f.submit "確認画面へ進む", class:"btn btn-primary mb-3" %>
<% end %>

</div>
</div>
</div>