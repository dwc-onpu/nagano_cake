<div class="row">
<div class="col-md-12">

<div class="badge badge-light my-4">
<h3>配送先編集</h3>
</div>

<%= form_with model:@address, local:true do |f| %>
<div class="shipping_addres col-md-10">
<div class="form-group col-md-12">
 <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3 control-label" %>
 <%= f.text_field :postal_code, class: "form-control col-3" %>
 </div>

<div class="form-group col-md-12">
<%= f.label :"住所" ,class: "col-md-3 control-label" %>
<%= f.text_field :address, class: "form-control col-5" %>
</div>

<div class="form-group col-md-12">
<%= f.label :"宛名", class: "col-md-3 control-label" %>
<%= f.text_field :name, class: "form-control col-3" %>
</div>

<div class="text-center mt-2">
<%= f.submit '変更内容を保存', class:"btn btn-success" %>
</div>

</div>
<% end %>
</div>
</div>