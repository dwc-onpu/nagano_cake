<div class="container">
  <div class="row my-4 badge badge-light">
    <h3>商品編集</h3>
  </div>
  <%= form_with(model: [ :admin, @item ]) do |f| %>
  <div class="row mb-2">
    <%= f.label :image,"商品画像" ,class:"col-4 text-right"%>
    <div class="col-7">
      <%= f.attachment_field :image%>
    </div>
  </div>
  <div class="row mb-2">
    <%= f.label :name,"商品名" ,class:"col-4 text-right "%>
    <div class="col-7">
      <%= f.text_field :name,size:45%>
    </div>
  </div>
  <div class="row mb-2">
    <%= f.label :introduction,"商品説明" ,class:"col-4 text-right " %>
    <div class="col-7">
      <%= f.text_area :introduction ,size:"45x6"%>
    </div>
    <%#= f.text_field :genre_id %> <!--コレクションセレクト使用-->
  </div>
  <div class="row mb-2">
    <%= f.label :genre,"ジャンル" ,class:"col-4 text-right " %>
    <div class="col-7">
      <%= f.collection_select(:genre_id, @genres, :id, :name )%>
    </div>
  </div>
  <%#= collection_select(:@genres, :name, genres, :id, :name ) %>
  <div class="row mb-2">
    <%= f.label :price,"税抜価格" ,class:"col-4 text-right " %>
    <div class="col-7">
      <%= f.text_field :price ,size:45%>
    </div>
  </div>
  <div class="row mb-2">
    <%#= f.text_field :is_active %>
    <%= f.label :is_active,"販売ステータス" ,class:"col-4 text-right "%>
    <span class="col-7">
      <%= f.radio_button :is_active, :true, checked: true %>
      <%= f.label :is_active, "販売中", {value: :販売中, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中", {value: :販売停止中, style: "display: inline-block;"} %>
    </span>
  </div>
  <div class="row justify-content-center">
    <%= f.submit '変更を保存',class:"btn btn-success"%>
  </div>
  <% end %>
</div>